@{
    ViewBag.Title = "Real Estate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalProperty">
        Abre modal
    </button>*@

<div id="menu" class="col-xl-12">

    <div id="error" class="pull-right alert alert-danger">
        Error:
    </div>
    <div id="success" class="pull-right success alert-success">
        Exito:
    </div>


</div>
<div id="map">

</div>


<div id="modalProperty" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title">Agregar Propiedad</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formProperty">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="cboPropertyType">Tipo de propiedad</label>
                            <select class="form-control" id="cboPropertyType" name="cboPropertyType" required></select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="cboOperationTypes">Tipo de operación</label>
                            <select class="form-control" id="cboOperationType" name="cboOperationType" required></select>
                        </div>
                    </div>


                    <div class="form-group">

                        <label for="cboCountry">Pais</label>
                        <select class="form-control" id="cboCountry"></select>

                    </div>

                    <div class="form-group">
                        <label for="">Estado</label>
                        <select class="form-control" id="cboState"></select>
                    </div>

                    <div class="form-group">
                        <label for="">Municipio</label>
                        <select class="form-control" id="cboCity"></select>
                    </div>

                    <div class="form-group">
                        <label for="cboNeighborhood">Colonia</label>
                        <select class="form-control" id="cboNeighborhood" required></select>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-8">
                            <label for="txtStreet">Calle</label>
                            <input class="form-control" id="txtStreet" name="txtStreet" required />
                        </div>
                        <div class="form-group col-md-4">
                            <label for="txtPC">Código postal</label>
                            <input type="text" class="form-control" id="txtPC" required />
                        </div>
                    </div>

                        <div class="form-group">
                            <label for="txtPrice" >Precio $</label>
                            <input type="number" class="form-control " id="txtPrice" name="txtPrice" min="50000" max="50000000" step="0.01" maxlength="8" required />
       
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnSaveProperty">Tomar fotos</button>
            </div>


        </div>
    </div>
</div>
